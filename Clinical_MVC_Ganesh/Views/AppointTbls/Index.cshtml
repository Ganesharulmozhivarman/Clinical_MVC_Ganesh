@model IEnumerable<Clinical_MVC_Ganesh.Models.AppointTbl>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Patient.cshtml";
}
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Skin Care Clinic</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        body {
            background-image: url(../../Assets/Img/RECEP.jpg);
            background-size: cover;
        }

        table {
            color: white;
        }

        h2 {
            color: #77529e;
        }
    </style>
</head>
<body>
    <h2>Appointments</h2>
    <p class="btn btn-default btn-success">
        @Html.ActionLink("Create New", "Create", null, new { style = "color:white;" })
    </p>
    @*<p>
            @Html.ActionLink("Create New", "Create")
        </p>*@
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DoctorTbl.DocName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PatientTbl.PatName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReceptionistTbl.RecName)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DoctorTbl.DocName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PatientTbl.PatName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReceptionistTbl.RecName)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.AppID }, new { style = "color:lawngreen;font-weight: bold;" }) |
                    @Html.ActionLink("Details", "Details", new { id = item.AppID }, new { style = "color:lawngreen;font-weight: bold;" }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.AppID }, new { style = "color:lawngreen;font-weight: bold;" })
                </td>
            </tr>
        }

    </table>
</body></html>