
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Skin Care Clinic</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        .navbar {
            background-color: #f3aaf3;
        }
        
        
    </style>
</head>
<body>
    <div class="navbar navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse" title="more options">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Receptionist", "Receptionist", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">

                    @*<li>@Html.ActionLink("Receptionist", "Index", "ReceptionistTbls")</li>
        <li>@Html.ActionLink("Doctors", "Index", "DoctorTbls")</li>
        <li>@Html.ActionLink("Laboratorian", "Index", "LaboratorianTbls")</li>*@
                    <li>@Html.ActionLink("Patient", "Index", "PatientTbls")</li>
                    <li>@Html.ActionLink("Apointments", "Index", "AppointTbls")</li>
                    <li>@Html.ActionLink("Patient Summary", "Index", "SearchPatients")</li>
                    @*<li>@Html.ActionLink("Log Out", "Login", "Account")</li>*@
                    <li>@Html.ActionLink("Log Out", "SignOut", "Account")</li>

                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Skin Care Clinic</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>