@model IEnumerable<Clinical_MVC_Ganesh.Models.PrescriptionTbl>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Doctor.cshtml";
}

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        body {
            background-image: url(../../Assets/Img/Operation.jpg);
            background-size: cover;
        }

        table {
            color: white;
        }

        h2 {
            color: lawngreen;
        }
    </style>
</head>
<body>
    <h2>Index</h2>
    <p class="btn btn-default btn-success">
        @Html.ActionLink("Create New", "Create", null, new { style = "color:white;" })
    </p>
    @*<p>
            @Html.ActionLink("Create New", "Create")
        </p>*@
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Medicines)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DoctorTbl.DocName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LabTestTbl.TestName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PatientTbl.PatName)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Medicines)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cost)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DoctorTbl.DocName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LabTestTbl.TestName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PatientTbl.PatName)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.PrescId }, new { style = "color:lawngreen;font-weight: bold;" }) |
                    @Html.ActionLink("Details", "Details", new { id = item.PrescId }, new { style = "color:lawngreen;font-weight: bold;" }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.PrescId }, new { style = "color:lawngreen;font-weight: bold;" })
                </td>
            </tr>
        }

    </table>
</body>
</html>