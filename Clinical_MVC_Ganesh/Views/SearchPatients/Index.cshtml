@model IEnumerable<Clinical_MVC_Ganesh.Models.PatientTbl>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Patient.cshtml";
}
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Skin Care Clinic</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>
        body {
            background-image: url(../../Assets/Img/RECEP.jpg);
            background-size: cover;
        }

        table,span {
            color: white;
        }

        h2 {
            color: #77529e;
        }
    </style>
</head>
<body>
    <h2>Search Patients Data</h2>
    @using (Html.BeginForm("Index", "SearchPatients", FormMethod.Post))
    {
        <span> Patients Name  </span>
        <input type="text" name="PatName" required />

        <span>      | </span>
        <input type="submit" value="Get Records" />

    }

    <p>
        @*@Html.ActionLink("Create New", "Create")*@
    </p>
    <p>
        @*@Html.ActionLink("Print", "PrintAllReport")*@
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PatName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PatPhone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PatGen)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PatDOB)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PatAdd)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PatAllegies)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReceptionistTbl.RecName)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.PatName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PatPhone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PatGen)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PatDOB)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PatAdd)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PatAllegies)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReceptionistTbl.RecName)
                </td>
                <td>
                    @*@Html.ActionLink("Edit", "Edit", new { id = item.PatId }) |
                        @Html.ActionLink("Details", "Details", new { id = item.PatId }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.PatId })*@
                    @Html.ActionLink("Print Patients Summary", "PrintPatientsSummary", new { id = item.PatId }, new { style = "color:lawngreen;font-weight: bold;" })
                </td>
            </tr>
        }

    </table>
    </body>
</html>
