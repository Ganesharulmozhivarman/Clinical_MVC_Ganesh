@model Clinical_MVC_Ganesh.Models.PatientTbl

@{
    ViewBag.Title = "IndexById";
    Layout = "~/Views/Shared/_LetterHead.cshtml";
}

<h2>Patients Summary</h2>
<div>
    <hr style="height:1px;border:none;color:#333;background-color:#333;" />
    <h2>Personal Details of : @Model.PatName</h2>
    <hr style="height:1px;border:none;color:#333;background-color:#333;" />
    <table class="table table-bordered table-condensed table-striped">
        <tr>
            <td>Patients Id :</td>
            <td>@Model.PatId</td>
        </tr>
        <tr>
            <td>Patients Contact :</td>
            <td>@Model.PatPhone</td>
        </tr>
        <tr>
            <td>Gender :</td>
            <td>@Model.PatGen</td>
        </tr>
        <tr>
            <td>DOD :</td>
            <td>@Model.PatDOB</td>
        </tr>
        <tr>
            <td>Address :</td>
            <td>@Model.PatAdd</td>
        </tr>
        <tr>
            <td>Allergies :</td>
            <td>@Model.PatAllegies</td>
        </tr>
    </table>
    <hr style="height:1px;border:none;color:#333;background-color:#333;" />
    <h2>Medical Summary</h2>
    <hr style="height:1px;border:none;color:#333;background-color:#333;" />     
    <table class="table table-condensed table-responsive">
        <tr>

            <th>Medicines</th>
            <th>Cost</th>
            <th>Doctor Name</th>
            <th>Lab Test</th>
            <th>Lab Cost</th>


        </tr>

        @foreach (var prescription in Model.PrescriptionTbls)
        {
            <tr>
                <td>
                    <p>
                        @prescription.Medicines
                    </p>
                </td>
                <td>
                    <p>
                        @prescription.Cost
                    </p>
                </td>
                <td>
                    <p>
                        @prescription.DoctorTbl.DocName
                    </p>
                </td>

                <td>
                    <p>
                        @prescription.LabTestTbl.TestName
                    </p>
                </td>
                <td>
                    <p>
                        @prescription.LabTestTbl.TestCost
                    </p>
                </td>
            </tr>
        }



    </table>
    <hr style="height:1px;border:none;color:#333;background-color:#333;" />
    <h2>Lab Summary</h2>
    <hr style="height:1px;border:none;color:#333;background-color:#333;" />
    <table class="table table-condensed table-responsive">
        <tr>

            <th>Test Name</th>
            <th>Date</th>
            <th>Test Report</th>
            <th>Lab Name</th>
            @*<th>Lab Cost</th>*@


        </tr>

        @foreach (var prescription in Model.ReportTbls)
        {
            <tr>
                <td>
                    <p>
                        @prescription.LabTestTbl.TestName
                    </p>
                </td>
                <td>
                    <p>
                        @prescription.TestDate
                    </p>
                </td>
                <td>
                    <p>
                        @prescription.TestSummary
                    </p>
                </td>
                <td>
                    <p>
                        @prescription.LaboratorianTbl.LabName
                    </p>
                </td>
                @*<td>
                        <p>
                            @prescription.
                        </p>
                    </td>*@
            </tr>
        }

    </table>



























